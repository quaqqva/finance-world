{
  "eslint.validate": ["javascript", "typescript", "html"],

  "eslint.options": {
    "extensions": [".js", ".ts", "html"]
  },

  "eslint.rules.customizations": [
    { "rule": "no-console", "severity": "error" }
  ],

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },

  "editor.formatOnSave": true
}
